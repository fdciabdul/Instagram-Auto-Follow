{
  "name": "instagram-follow-automation",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.9.0",
    "html-colors": "^0.0.6",
    "mkdirp": "^3.0.1",
    "proxy-chain": "2.5.6",
    "puppeteer": "^23.11.1",
    "sql.js": "^1.12.0",
    "undetected-browser": "^2.0.4",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.skyteam.igautofollow",
    "productName": "SKYTEAM",
    "copyright": "Copyright Â© 2025 Skyteam",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "installer.nsh"
    },
    "files": [
      "assets/**/*",
      "main.js",
      "package.json",
      "index.html",
      "README.md",
      "LICENSE",
      "renderer.js",
      "preload.js",
      "src/**/*",
      "app.js",
      "proxy.json"
    ],
    "directories": {
      "buildResources": "src/icons"
    }
  }
}
